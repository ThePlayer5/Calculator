<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.ColumnSpan="4"
                 Grid.Row="1"
                 BorderThickness="2"
                 FontSize="24"
                 VerticalContentAlignment="Center"/>
        <Button Grid.Row="2"
                Content="7"
                x:Name="SevenBtn"
                Click="SevenBtn_Click"/>
        <Button Grid.Row="2"
                Grid.Column="1"
                Content="8"
                x:Name="EightBtn"
                Click="EightBtn_Click"/>
        <Button Grid.Row="2"
                Grid.Column="2"
                Content="9"
                x:Name="NineBtn"
                Click="NineBtn_Click"/>
        <Button Grid.Row="2"
                Grid.Column="3"
                FontSize="18"
                Content="÷"
                x:Name="DivideBtn"
                Click="DivideBtn_Click"/>
        <Button Grid.Row="3"
                Grid.Column="0"
                Content="4"
                x:Name="FourBtn"
                Click="FourBtn_Click"/>
        <Button Grid.Row="3"
                Grid.Column="1"
                Content="5"
                x:Name="FiveBtn"
                Click="FiveBtn_Click"/>
        <Button Grid.Row="3"
                Grid.Column="2"
                Content="6"
                x:Name="SixBtn"
                Click="SixBtn_Click"/>
        <Button Grid.Row="3"
                Grid.Column="3"
                FontSize="18"
                Content="×"
                x:Name="MultiplyBtn"
                Click="MultiplyBtn_Click"/>
        <Button Grid.Row="4"
                Grid.Column="0"
                Content="1"
                x:Name="OneBtn"
                Click="OneBtn_Click"/>
        <Button Grid.Row="4"
                Grid.Column="1"
                Content="2"
                x:Name="TwoBtn"
                Click="TwoBtn_Click"/>
        <Button Grid.Row="4"
                Grid.Column="2"
                Content="3"
                x:Name="ThreeBtn"
                Click="ThreeBtn_Click"/>
        <Button Grid.Row="4"
                Grid.Column="3"
                FontSize="18"
                Content="–"
                x:Name="MinusBtn"
                Click="MinusBtn_Click"/>
        <Button Grid.Row="5"
                Grid.Column="0"
                Content="C"
                x:Name="ClearBtn"
                Click="ClearBtn_Click"
                Background="DarkOrange"/>
        <Button Grid.Row="5"
                Grid.Column="1"
                Content="0"
                x:Name="ZeroBtn"
                Click="ZeroBtn_Click"/>
        <Button Grid.Row="5"
                Grid.Column="3"
                FontSize="18"
                Content="+"
                x:Name="PlusBtn"
                Click="PlusBtn_Click"/>
        <Button Grid.Row="5"
                Grid.Column="2"
                FontSize="18"
                Content="="
                x:Name="EqualsBtn"
                Click="EqualsBtn_Click"
                Background="SandyBrown"/>
    </Grid>
</Window>
